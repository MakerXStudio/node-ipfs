{
  "name": "@makerx/{{package-name}}",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "{{package-description}}",
  "keywords": [
    "{{package-name}}",
    "MakerX",
    "TypeScript",
    "TS"
  ],
  "author": "MakerX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MakerXStudio/{{package-name}}/issues"
  },
  "homepage": "https://github.com/MakerXStudio/{{package-name}}#readme",
  "main": "./dist/src/index.js",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npx tsc",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint ./src/ --ext .ts",
    "lint:fix": "eslint ./src/ --ext .ts --fix",
    "commitlint": "commitlint --edit -o",
    "semantic-release": "semantic-release",
    "generate-doc": "typedoc",
    "generate-website":"npm run generate-doc && npx repository-website-generator",
    "serve-generated-website": "http-server -c-1 ./out",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MakerXStudio/{{package-name}}.git"
  },
  "engines": {
    "node": ">=18.0"
  },
  "peeprDependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@makerx/repository-website-generator": "^1.6.1",
    "@makerx/eslint-config": "3.0.0",
    "@makerx/prettier-config": "2.0.0",
    "@makerx/ts-config": "1.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "prettier": "^2.8.4",
    "semantic-release": "^20.1.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.25",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
