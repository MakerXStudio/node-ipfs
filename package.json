{
  "name": "@makerx/node-ipfs",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.1",
  "description": "A NodeJS package that makes interacting with IPFS easier",
  "keywords": [
    "node-ipfs",
    "ipfs-storage",
    "ipfs",
    "storage",
    "blockchain",
    "NFT",
    "MakerX",
    "TypeScript",
    "TS"
  ],
  "author": "MakerX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MakerXStudio/node-ipfs/issues"
  },
  "homepage": "https://github.com/MakerXStudio/node-ipfs#readme",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "run-s build:*",
    "build:0-clean": "rimraf dist",
    "build:1-compile": "npx tsc",
    "build:2-copy-pkg-json": "npx --yes @makerx/ts-toolkit@latest copy-package-json --main ./index.js --types ./index.d.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint ./src/ --ext .ts",
    "lint:fix": "eslint ./src/ --ext .ts --fix",
    "commitlint": "commitlint --edit -o",
    "semantic-release": "semantic-release",
    "generate-doc": "typedoc",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MakerXStudio/node-ipfs.git"
  },
  "engines": {
    "node": ">=18.0"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "blockstore-core": "^5.0.2",
    "ipfs-unixfs-importer": "^15.3.1",
    "multiformats": "^13.3.1"
  },
  "peerDependencies": {
    "@makerx/node-cache": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@makerx/eslint-config": "^3.1.1",
    "@makerx/prettier-config": "^2.0.1",
    "@makerx/ts-config": "^1.0.1",
    "@types/async-retry": "^1.4.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.0",
    "ts-jest": "^29.2.5",
    "ts-jest-mocker": "^1.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.26.11",
    "typedoc-plugin-markdown": "^4.2.10",
    "typescript": "^5.6.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "./dist"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
